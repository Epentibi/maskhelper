<swiper previous-margin="0" next-margin="0" circular="true" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class = "slide">
  <block wx:for="{{imgUrls}}" >  
      <swiper-item class='slideshow'>
        <image src="{{item}}" mode = 'widthFix' class='swiperimg'/>
      </swiper-item>
  </block>
</swiper>

